extends ./layout/index

block contenido
    main.container.mt-5 
        h1.text-center #{pagina}
        .row 
            h2.d-block.w-100.text-center Agrega un Testimonial

            .col-md-12
                if(errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center #{error.mensaje}

            .row.justify-content-center.col
                .col-md-8 
                    form(action="/testimoniales" method="POST") 
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Tu nombre", name="nombre" class="form-control", value=nombre) 
                        .form-group
                            label(for="correo") Correo Electr√≥nico
                            input#correo(type="text", placeholder="Tu nombre", name="correo" class="form-control", value=correo) 
                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje( class="form-control" name="mensaje", rows="3")= mensaje
                        
                        input.btn.btn-success.btn-block(type="submit") 
                        
        each testimonial in testimoniales
            .col-md-6.col-lg-4.mb-4
                blocquote #{testimonial.mensaje} 
            
                             